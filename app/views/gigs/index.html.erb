<div class="container">
  <div class="jumbotron">
    <div class="gigs_header">
      <h1 style="text-align: center; color:#000000"><%= @display_name %></h1>
    </div>

    <%= image_tag @image_url %>

    <hr style="margin-bottom: -10px;">

    <h2 align="center">Upcoming Shows</h2>

    <table align="center" class="table table-bordered">
      <tr>
        <th>Venue</th>
        <th>Location</th>
        <th>Cast Your Vote</th>
        <th>Total Votes</th>
      </tr>
      <% @gigs.each do |venue, event| %>
        <tr>
          <td><%= event[:venue] %></td>
          <td><%= event[:location] %></td>
          <td><%= link_to "Vote Now!",
                          votes_new_path(venue: venue,
                                         gig_id: event[:gig_id],
                                         location: event[:location],
                                         artist: @display_name),
                          method: :post,
                          :style => "color:red" %></td>
          <td><%= link_to "See All Votes For This Concert",
                          votes_for_gig_path(gig_id: event[:gig_id]),
                          :style => "color:blue" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>