<h3>Edit Profile</h3>

<form class="registration" action="/user/<%= @user.id %>" method="post">
  <input type="hidden" name="_method" value="put"/>
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

  <p>
    <label for="band_name" class="form-label">Band Name</label>
    <input name="band_name" type="text">
  </p>

  <p>
    <label for="tour_info" class="form-label">Tour Info</label>
    <input name="tour_info" type="text">
  </p>

  <p>
    <input type="submit" value="Update" class="form-button">
  </p>
</form>