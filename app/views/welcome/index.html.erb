<body class="homepage">
<% if logged_in? %>

  <div class="row">
    <div class="col-xs-6">
      <form class="form_display" action="/gigs" method="get">
        <input class="form-control" type="text" name="band_name" placeholder="Enter Band Name">
        <br>
        <button id="loading-search-btn" type="submit" class="btn btn-default" value="Search For Gigs">Search for Concerts</button>
      </form>
    </div>
    <div id="twitter_widget" class="col-xs-6">
      <%= render partial: 'shared/tweets' %>
    </div>
  </div>
<% end %>

<script>
  $('#loading-search-btn').click(function () {
    var btn = $(this)
    btn.button('loading')
  });
</script>
</body>
